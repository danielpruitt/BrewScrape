
    <div class="navbar-fixed">
        <nav>
            <div class="nav-wrapper grey darken-4">
                <a href="/" class="brand-logo center">BrewScrape</a>
            </div>
        </nav>
    </div>


    <div id="articles" class="container indigo lighten-5">
        <div class="row">

            {{#each Article}}
            <div class="col s12 m6 l4">

                <div class="card large hoverable">
                    <div class="card-image">
                        <img srcset="{{this.img}}" />
                        <span class="card-title title-wrap" data-id={{this.id}}>{{this.title}}</span>
                    </div>

                    <div class="card-content">
                        <a href="{{this.link}}" target="_blank">{{this.link}}</a>
                        <p class="truncate">{{this.summary}}</p>
                        <button class="btn activator blue-grey darken-2" data-id={{this.id}}>Notes</button>
                    </div>

                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">Notes<i class="material-icons right">close</i></span>
                        <div class="notes">

                        </div>
                    </div>

                </div>
            </div>

            {{/each}}

            <div class="col s12 m6 l4">

            </div>
        </div>
    </div>


